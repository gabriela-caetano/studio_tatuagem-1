{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Instalar Dependências - Studio Tatuagem",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Write-Host 'Instalando dependências do backend...' -ForegroundColor Green; cd backend; npm install; Write-Host 'Instalando dependências do frontend...' -ForegroundColor Green; cd ../frontend; npm install; Write-Host 'Instalação concluída!' -ForegroundColor Green"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Iniciar Backend - Desenvolvimento",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Iniciar Frontend - Desenvolvimento",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Iniciar Aplicação Completa",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Iniciar Backend - Desenvolvimento",
                "Iniciar Frontend - Desenvolvimento"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Frontend - Produção",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Executar Testes - Backend",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Executar Testes - Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
